#install postgres from source
wget http://repo.postgrespro.ru/pgpro-11/src/postgrespro-standard-11.1.1.tar.bz2 /home/akatruk/Download/

#unpacked file
tar xvjf postgrespro-standard-11.1.1.tar.bz2

#create directory for distributive
mkdir /u01/psql/

#prepare instalation postgres
cd /home/akatruk/Download/
./configure -prefix /u01/pgsql

#add utilities
apt-get install gcc libreadline-dev

#install postgres
make install
